{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "source": "~/Pictures/ASCII/hyprland.txt",
        "color": {"1": "{{colors.primary.default.hex}}"},
        "type": "file",
        "height": 18,
        "padding": {
            "top": 2
        }
    },
    "display": {
        "separator": " ",
        "color": {
            "title": "{{colors.primary.default.hex}}"
        }
    },
    "modules": [
        "break",
        {
            "type": "title",
            "keyWidth": 10
        },
        "break",
        {
            "type": "os",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "kernel",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "packages",
            "format": "{} (pacman)",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "shell",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "terminal",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "wm",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "display",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "cpu",
            "format": "{1}",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "gpu",
            "format": "{2}",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "gpu",
            "format": "{3}",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "memory",
            "key": "﬙ ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "swap",
            "key": "󰾴 ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "disk",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "uptime",
            "key": " ",
            "keyColor": "{{colors.primary.default.hex}}"
        },
        {
            "type": "command",
            "key": "󱦟 ",
            "keyColor": "{{colors.primary.default.hex}}",
            "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days"
        },
        "break",
        "break",
        "break"
    ]
}
